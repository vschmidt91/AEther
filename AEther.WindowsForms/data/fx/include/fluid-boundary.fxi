

bool getBoundary(float2 p)
{

	bool result = true;

	float margin = .01;
	result = result && all(margin < p.xy);
	result = result && all(p.xy < 1 - margin);

	float2 obstaclePosition = float2(.5, .5);
	float obstacleSize = .1;
	result = result && (obstacleSize < distance(p, obstaclePosition));

	return result;

}